<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ancientlore.calc.MainActivity"
    android:orientation="vertical"
    android:baselineAligned="true"
    android:background="@android:color/white">

    <include
        layout="@layout/calc_result_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button android:id="@+id/buttonCancel"
                android:text="C"
                android:background="@color/calc_cancel_button"
                style="@style/calc_button" />

            <Button android:id="@+id/buttonBracket"
                android:text=""
                android:background="@color/calc_operation_button"
                style="@style/calc_button" />

            <Button android:id="@+id/buttonDiv"
                android:text="/"
                android:background="@color/calc_operation_button"
                style="@style/calc_button" />

            <Button
                android:id="@+id/buttonDel"
                android:text="Del"
                android:background="@color/calc_cancel_button"
                style="@style/calc_button" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button7"
                android:text="7"
                android:background="@color/calc_digit_button"
                style="@style/calc_button" />

            <Button
                android:id="@+id/button8"
                android:text="8"
                android:background="@color/calc_digit_button"
                style="@style/calc_button" />

            <Button
                android:id="@+id/button9"
                android:text="9"
                android:background="@color/calc_digit_button"
                style="@style/calc_button" />

            <Button
                android:id="@+id/buttonAdd"
                android:text="+"
                android:background="@color/calc_operation_button"
                style="@style/calc_button" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button4"
                android:text="4"
                android:background="@color/calc_digit_button"
                style="@style/calc_button" />

            <Button
                android:id="@+id/button5"
                android:text="5"
                android:background="@color/calc_digit_button"
                style="@style/calc_button" />

            <Button
                android:id="@+id/button6"
                android:text="6"
                android:background="@color/calc_digit_button"
                style="@style/calc_button" />

            <Button
                android:id="@+id/buttonSub"
                android:text="-"
                android:background="@color/calc_operation_button"
                style="@style/calc_button" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:text="1"
                android:background="@color/calc_digit_button"
                style="@style/calc_button" />

            <Button
                android:id="@+id/button2"
                android:text="2"
                android:background="@color/calc_digit_button"
                style="@style/calc_button" />

            <Button
                android:id="@+id/button3"
                android:text="3"
                android:background="@color/calc_digit_button"
                style="@style/calc_button" />

            <Button
                android:id="@+id/buttonMult"
                android:text="*"
                android:background="@color/calc_operation_button"
                style="@style/calc_button" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buttonDot"
                android:text="."
                android:background="@color/calc_operation_button"
                style="@style/calc_button" />

            <Button
                android:id="@+id/button0"
                android:text="0"
                android:background="@color/calc_digit_button"
                style="@style/calc_button" />

            <Button
                android:id="@+id/buttonMod"
                android:text="%"
                android:background="@color/calc_operation_button"
                style="@style/calc_button" />

            <Button
                android:id="@+id/buttonResult"
                android:text="="
                android:background="@color/calc_result_button"
                style="@style/calc_button" />
        </TableRow>
    </TableLayout>
</LinearLayout>
